@{
    ViewData["Title"] = "Quiz 2";
}

<!DOCTYPE html>
<html>
<head>
    <title>Question Creation</title>
    <style>
        .container {
            background-color: white;
            width: 90%;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .header {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-group {
            width: 100%;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .form-group label {
                font-size: 16px;
            }

        .timer {
            font-size: 16px;
            font-weight: bold;
            color: #007bff;
        }

        .choices-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 20px;
        }

        .choice {
            width: 45%;
            display: flex;
            align-items: center;
        }

            .choice input[type="radio"] {
                margin-left: 10px;
            }

        .buttons-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .btn-prev {
            padding: 10px 20px;
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-next {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            .btn-next:hover, .btn-prev:hover {
                opacity: 0.8;
            }
    </style>
    <script>// Countdown timer logic
        function startCountdown() {
            let timerElement = document.getElementById('timer');
            let timeLeft = 10; // Set countdown time in seconds

            const timer = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timer);
                    // Redirect to the next location
                    location.href = '/Home/quiz3';
                } else {
                    timerElement.textContent = `${timeLeft} seconds remaining`;
                }
                timeLeft--;
            }, 1000); // Decrease by 1 every second
        }

        window.onload = startCountdown;</script>
</head>
<body>
    <div class="container">
        <div class="header">Heart</div>
        <form>
            <div class="form-group">
                <label for="question">Question: 2 / 3</label>
                <span class="timer" id="timer">10 seconds remaining</span>
            </div>
            <div class="form-group">

                <p id="question" rows="3" style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px;">
                    How many chambers is the heart made of?
                </p>
            </div>
            <div class="choices-container">
                <div class="choice">
                    <p>
                        <input type="radio" name="correctAnswer" value="1">
                        A.) 1
                    </p>

                </div>
                <div class="choice">
                    <p>
                        <input type="radio" name="correctAnswer" value="1">
                        C.) 3
                    </p>

                </div>
            </div>
            <div class="choices-container">
                <div class="choice">
                    <p>
                        <input type="radio" name="correctAnswer" value="1">
                        B.) 2
                    </p>

                </div>
                <div class="choice">
                    <p>
                        <input type="radio" name="correctAnswer" value="1">
                        D.) 4
                    </p>

                </div>
            </div>
            <div class="buttons-container">
                <button type="button" class="btn-prev" onclick="handlePrevious()">previous</button>
                <button type="button" class="btn-next" onclick="location.href='/Home/quiz3'">Next</button>
            </div>
        </form>
    </div>
</body>
</html>