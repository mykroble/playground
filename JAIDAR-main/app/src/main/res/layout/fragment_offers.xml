<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/outbound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outbound"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/outbound_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/outbound_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You haven't booked anyone"
        android:textSize="16sp"
        android:textColor="#777777"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/inbound_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inbound"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inbound_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/inbound_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing inbox..."
        android:textSize="16sp"
        android:textColor="#777777"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>
