<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextDepartureCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departure City"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextArrivalCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Arrival City"
        android:inputType="text"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/editTextTravelDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Travel Date"
        android:focusable="false"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonSearchBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Bus"
        android:layout_marginTop="16dp"/>
</LinearLayout>